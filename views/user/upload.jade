extends ../layout

block content
  hr.mt-3
  form#uploadVideo
    label Title
    input(name="title" type="text" id="videoTitle" required)
    textarea(id="videoDesc" required)
    input(type='filepicker', data-fp-apikey='AidhEA8EOS6RJEFfygsngz', onchange='getUploadData(event.fpfile)')
    select
      option(value="Option1") Option1
      option(value="Option2") Option2
      option(value="Option3") Option3
    button(type="submit" id="upload") Upload
